<div class="container">
  <h1><%= @user.first_name %> <%= @user.last_name %></h1>
  <h2><%= @user.user_name %></h2>
  <h3>Email: <%= @user.email %></h3>
  <h3>Gender Identity: <%= @user.gender_identity %></h3>
  <h3>Bio:</h3>
  <p>
    <%= @user.bio %>
  </p>
  <br />
  <br />
  
  <%= link_to "Edit User", edit_user_path(@user.id), class: "btn btn-large btn-primary btn-block", role: "button" %>

</div>
